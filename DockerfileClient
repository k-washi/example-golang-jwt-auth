FROM golang:1.12.7-alpine3.10 as build-step

RUN apk add --update --no-cache ca-certificates git make

ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

WORKDIR /go-app
COPY go.mod .
COPY go.sum .

RUN go mod download
COPY ./client ./client
COPY ./testApp ./testApp
COPY ./src ./src
COPY Makefile .

RUN make devel-deps
RUN make client/app

#runtime image
FROM alpine
COPY --from=build-step /go-app/client/app /app
ENTRYPOINT ["./app"]

EXPOSE 8080